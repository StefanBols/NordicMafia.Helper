{
  "manifest_version": 2,
  "name": "NordicMafia Helper",
  "short_name": "NM Helper",
  "description": "Get desktop notification in-game. This is a helper for the Nordic Mafia browser game. It's NOT a bot nor a official extension!",
  "homepage_url": "https://github.com/StefanBols/NordicMafia.Helper",
  "author": "Stefan Bols (in-game: bols)",
  "version": "1.1",
  "browser_action": {
    "default_title": "NM Helper"
  },

  "background": {
    "scripts": [
      "scripts/load.js"
    ],
    "persistent": true
  },
  "options_page": "options/index.html",
  "web_accessible_resources": ["options/index.html"],

  "permissions": [
    "notifications",
    "alarms",
    "storage"
  ],
  
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.nordicmafia.org/*"
      ],
      "js": ["lib/jquery-3.3.1.min.js", "scripts/helper.js"]
    }
  ],

  "icons": {
    "100": "graphics/icons/icon.png"
  }
}